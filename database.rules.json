{
    "rules": {
        "following": {
            "$uid": {
                ".read": "auth != null",
                ".write": "auth.uid === $uid"
            }
        },

        "users": {
            ".read": true,

            ".indexOn": "username",
            "$uid": {
                ".write": "auth.uid === $uid"
            },
            "username": {
                ".validate": "newData.val() === data.val()"
            }
        }
    }
}
